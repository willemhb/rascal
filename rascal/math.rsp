;;; begin math.rsp

(fun diff
  "With one argument, returns a function
   that computes the derivative of fn."
  [fn]
    (curry diff fn)
  "With two arguments, passes default value
   for to three argument version."
  [fn x]
    (diff fn x 0.0001)
  "With three arguments, computes a numerical
   derivative."
  [fn x h]
    (/ (- (fn (+x h))
       	  (fn x))
       h))

